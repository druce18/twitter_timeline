<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tweet_advertisement"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ghostly">

    <ImageButton
        android:id="@+id/userTweetImageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_twitter" />

    <com.google.android.material.card.MaterialCardView
        style="@style/TweetsCornerCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:background="#FFF200">

        <TextView
            android:id="@+id/massageTweetTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="left"
            android:text="Do you wanna by a house? Please check this out: https://www.zillow.com/pa/"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline2"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:ignore="RtlHardcoded" />

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>